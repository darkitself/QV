<?xml version="1.0" encoding="utf-8"?>

<CarouselPage xmlns = "http://xamarin.com/schemas/2014/forms"
              xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:forms = "clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
              x:Class = "QV.Pages.QRCodePage">
    <ContentPage BackgroundColor = "{DynamicResource DarkBlue}">
        <ContentPage.Content>
            <Grid>
                <Image Style = "{DynamicResource BackGroundImageStyle}" />
                <StackLayout HorizontalOptions = "Center"
                             VerticalOptions = "Center">
                    <Label Text = "Текущая визитка:"
                           HorizontalOptions = "Center"
                           Style = "{DynamicResource LabelStyle}" />
                    <StackLayout HorizontalOptions = "Center"
                             VerticalOptions = "Center"
                                 Orientation="Horizontal">
                        <Picker x:Name = "CurrentCard"
                            HorizontalOptions = "Center"
                            TextColor = "{DynamicResource AlfaBrandRed}"
                            BackgroundColor = "Transparent"
                            WidthRequest = "200"
                            SelectedIndexChanged = "CurrentCard_SelectedIndexChanged"
                            ItemDisplayBinding = "{Binding Card_Name}" />
                        <ImageButton Source = "copy.png"
                                     WidthRequest = "35"
                                     HeightRequest = "35"
                                     BackgroundColor = "Transparent"
                                     Clicked="CopyLinkButton_Clicked"/>
                    </StackLayout>
                    <Image x:Name = "QRImage"
                           Margin="50" />
                </StackLayout>
            </Grid>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage x:Name = "ScannerPage"
                 BackgroundColor = "{DynamicResource DarkBlue}">
        <ContentPage.Content>
            <Grid>
                <Image Style = "{DynamicResource BackGroundImageStyle}" />
                <StackLayout Orientation="Vertical"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
                    <StackLayout Orientation = "Horizontal">
                        <Entry x:Name = "LinkEntry"
                               Placeholder = "Введите ссылку на визитку"
                               TextColor = "{DynamicResource AlfaBrandRed}"
                               PlaceholderColor = "White" />
                        <ImageButton x:Name = "SearchButton"
                                     Source = "search.png"
                                     WidthRequest = "30"
                                     HeightRequest = "30"
                                     BackgroundColor = "Transparent"
                                     Clicked = "GetDataByLink_OnClicked" />
                    </StackLayout>
                    <Button x:Name = "ScanButton"
                            HorizontalOptions = "Center"
                            VerticalOptions = "Center"
                            Text = "Сканировать"
                            Style = "{DynamicResource RedButtonStyle}"
                            Clicked = "ScanButton_OnClicked" />
                </StackLayout>
            </Grid>
        </ContentPage.Content>
    </ContentPage>
</CarouselPage>