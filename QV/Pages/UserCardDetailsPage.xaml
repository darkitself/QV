<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QV.Pages.UserCardDetailsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Clicked="Edit_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="30">
            <Label x:Name ="Surname" Text="{Binding Data.Surname}" IsVisible="{Binding Flags.Surname}"/>
            <Label x:Name ="Name" Text="{Binding Data.Name}" IsVisible="{Binding Flags.Name}"/>
            <Label x:Name ="Patronymic" Text="{Binding Data.Patronymic}" IsVisible="{Binding Flags.Patronymic}"/>
            <Label x:Name ="Phone_Number" Text="{Binding Data.Phone_Number}" IsVisible="{Binding Flags.Phone_Number}"/>
            <Label x:Name ="Email" Text="{Binding Data.Email}" IsVisible="{Binding Flags.Email}"/>
            <Label x:Name ="VK" Text="{Binding Data.VK}" IsVisible="{Binding Flags.VK}"/>
            <Label x:Name ="Facebook" Text="{Binding Data.Facebook}" IsVisible="{Binding Flags.Facebook}"/>
            <Label x:Name ="Telegram" Text="{Binding Data.Telegram}" IsVisible="{Binding Flags.Telegram}"/>
            <Label x:Name ="Instagram" Text="{Binding Data.Instagram}" IsVisible="{Binding Flags.Instagram}"/>
            <Label x:Name ="Info" Text="{Binding Data.Info}" IsVisible="{Binding Flags.Info}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>